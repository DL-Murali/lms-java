pipeline {
    agent any
        
    stages {
        stage('Sonar Analysis') {
            steps {
                script {
                    echo 'Running Maven clean, verify, and SonarQube analysis...'
                    sh 'cd LMS-BE/ && mvn clean verify sonar:sonar ' +
                            "-Dsonar.projectKey=lms-java " +
                            "-Dsonar.projectName='lms-java' " +
                            "-Dsonar.host.url=http://13.236.84.113:9000 " +
                            "-Dsonar.login=sqp_9857a9e70109074ce7add064e16cecfece91f194 " +
                            "-DskipTests "
                }
            }
        }
    }

    post {
        success {
            script {
                echo 'Sending success email...'
                emailext body: 'This is to notify that the build job has been successful.',
                          subject: 'Jenkins Notification - Build Successful',
                          to: 'sathishgodavarthi@gmail.com',
                          attachLog: true
            }
        }

        failure {
            script {
                echo 'Sending failure email...'
                emailext body: 'This is to notify that the build job has failed. Please check the logs for details.',
                          subject: 'Jenkins Notification - Build Failed',
                          to: 'sathishgodavarthi@gmail.com',
                          attachLog: true
                currentBuild.result = 'FAILURE' // Marking the build as failure explicitly
            }
        }
    }
}
